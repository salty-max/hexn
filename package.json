{
	"name": "hexn",
	"version": "0.1.0",
	"description": "A CLI to mess with bytes",
	"main": "./bin/index.js",
	"repository": "git@github.com:salty-max/hexn.git",
	"author": "Maxime Blanc <max@jellycat.fr>",
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc && chmod +x ./bin/index.js",
		"dev": "tsc --watch",
		"hexn": "node bin --file example.bin",
		"gen": "node bin/generate-bin.js 256 example.bin",
		"lint": "eslint src",
		"lint:fix": "eslint src --fix",
		"fmt": "prettier --write src",
		"test": "ava src"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"ink": "^4.1.0",
		"meow": "^11.0.0",
		"react": "^18.2.0"
	},
	"devDependencies": {
		"@ava/typescript": "^4.1.0",
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/node": "^20.4.5",
		"@types/react": "^18.0.32",
		"@typescript-eslint/eslint-plugin": "^6.2.0",
		"@typescript-eslint/parser": "^6.2.0",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.3.1",
		"chalk": "^5.2.0",
		"eslint": "^8.45.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.33.0",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.3"
	},
	"ava": {
		"typescript": {
			"extensions": [
				"ts",
				"tsx"
			],
			"rewritePaths": {
				"src/": "bin/"
			},
			"compile": "tsc"
		}
	},
	"prettier": "@vdemedes/prettier-config"
}